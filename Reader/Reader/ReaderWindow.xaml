 <Window x:Class="Reader.ReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reader"
        mc:Ignorable="d"
        Title="ReaderWindow" Height="720" Width="420" WindowStyle="None" MouseDown="Window_MouseDown">
    <Grid Width="{Binding ActualWidth, 
              RelativeSource = {RelativeSource AncestorType = {x:Type Window}}}" Height="{Binding ActualHeight, 
              RelativeSource ={RelativeSource AncestorType = {x:Type Window}}}" VerticalAlignment="Top">
        <Image Name ="MangaDisplay" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,-4,0" Stretch="Fill"/>
        <TextBlock Name ="MangaTitle" Height="24" Background="White" VerticalAlignment="Top"></TextBlock>
    </Grid>
</Window>
